<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="shortcut icon" href="~/Content/605496_arch_architecture_building_museum_theatre_icon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/605496_arch_architecture_building_museum_theatre_icon.ico">
    <title>Mis gastos - @ViewBag.Title</title>
</head>
<body class="row">
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-12 col-sm-12 col-12 bg-main">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link text-light" aria-current="page" href="@Url.Action("Index","Home")"><i class="bi bi-house-heart-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" aria-current="page" href="#"><i class="bi bi-bank2"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" aria-current="page" href="#"><i class="bi bi-cash-stack"></i></a>
                    </li>

                </ul>
            </nav>
            <main class="container body-content mt-3 col-md-10 col-sm-9 col-10">
                @RenderBody()
                <hr />
                <footer class="pt-5">
                    <p class="text-light text-center">&copy; @DateTime.Now.Year - Si tenes alguna idea para mejorar el proyecto contactame valentincarballo99@gmail.com</p>
                </footer>
            </main>
        </div>
    </div>


    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        function enEspera(modo = "on", titulo = "Procesando...", texto = "Aguarde un instante") {
            if (modo == "on") {
                Swal.fire({
                    title: titulo,
                    html: texto,
                    allowOutsideClick: false,
                    showCancelButton: false,
                    showConfirmButton: false,
                    showDenyButton: false
                });
                Swal.showLoading();
            } else {
                Swal.close();
            }
        }

        function modalAwait(modo = "show") {

            if (modo == "show") {

                $("#espera_contenedor").css("top", window.scrollY)

                $("#espera_contenedor").css("visibility", "visible")

            } else {

                $("#espera_contenedor").css("visibility", "hidden")

            }
        }
    </script>
</body>
</html>